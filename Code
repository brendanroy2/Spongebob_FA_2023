#include <Servo.h>

// Constants for the pins used
const int switchPinServo = 7; // Switch to control the servo
const int switchPinLED = 6;   // Switch to control the LED
const int servoPin = 9;       // Pin connected to the servo
const int ledPin = 10;        // Pin connected to the LED

// Create a Servo object
Servo myServo;

void setup() {
  // Initialize the switch pins as input with internal pull-up resistors
  pinMode(switchPinServo, INPUT_PULLUP);
  pinMode(switchPinLED, INPUT_PULLUP);
  
  // Initialize the LED pin as an output
  pinMode(ledPin, OUTPUT);
  
  // Initialize the servo
  myServo.attach(servoPin);
}

void loop() {
  // Read the state of the switches
  int switchStateServo = digitalRead(switchPinServo);
  int switchStateLED = digitalRead(switchPinLED);

  // Control the servo
  if (switchStateServo == LOW) { // When switch is pressed (assuming normally open)
    myServo.write(90); // Replace with your desired angle
  } else {
    myServo.write(0); // Replace with angle for off state
  }

  // Control the LED
  if (switchStateLED == LOW) { // When switch is pressed
    digitalWrite(ledPin, HIGH); // Turn on LED
  } else {
    digitalWrite(ledPin, LOW); // Turn off LED
  }
}
